<%- include('../partials/header') %>
    <h2>list detail show page</h2>
    <% if (list !== undefined) { %>

    <div>Title:<%=list.title%></div>
    <div>Items:</div>
    <% if (list.items.length) { %> <%list.items.forEach(function(l){ %>
    <div><%=l.details%></div>
    <!-- purchased will be a checkbox -->
    <div><%=l.purchased%></div>
    <% }); %> <% } else { %>
    <div>no items yet</div>
    <% } %>

    <form id="add-list-form" method="POST" action="/lists/<%=list._id%>/items">
      <h2>Add Item</h2>
      <label>Item Name</label>
      <input type="text" required name="details" />
      <input type="submit" value="Add Item" />
    </form>
    <% }%>
    <% } %> <%- include('../partials/footer') %>

